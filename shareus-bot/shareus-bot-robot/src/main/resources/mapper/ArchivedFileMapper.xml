<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.shareus.bot.robot.mapper.ArchivedFileMapper">

    <resultMap type="top.shareus.bot.common.domain.ArchivedFile" id="ArchivedFileResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="senderId" column="sender_id"/>
        <result property="size" column="size"/>
        <result property="md5" column="md5"/>
        <result property="enabled" column="enabled"/>
        <result property="delFlag" column="del_flag"/>
        <result property="originUrl" column="origin_url"/>
        <result property="archiveUrl" column="archive_url"/>
        <result property="archiveDate" column="archive_date"/>
    </resultMap>

    <sql id="selectArchivedFileVo">
        select id,
               name,
               sender_id, size, md5, enabled, del_flag, origin_url, archive_url, archive_date
        from archived_file
    </sql>
    <select id="countByYesterday" resultType="java.lang.Integer">
        SELECT count(1)
        FROM archived_file
        WHERE DATEDIFF(NOW(), archive_date) = 1
    </select>
    <select id="countByDaysOfBefore" resultType="java.lang.Integer">
        SELECT count(1)
        FROM archived_file
        WHERE DATEDIFF(NOW(), archive_date) <![CDATA[ <]]> #{day}
    </select>
    <select id="computedFileStar" resultType="top.shareus.bot.common.domain.ShareFileStar">
        SELECT sender_id, count(sender_id) as times
        FROM archived_file
        WHERE DATEDIFF(NOW(), archive_date) <![CDATA[ <]]> #{day}
        GROUP BY sender_id
        ORDER BY times desc limit 5
    </select>
    <select id="selectBookByName" resultType="top.shareus.bot.common.domain.ArchivedFile">
        SELECT *
        FROM archived_file
        WHERE NAME LIKE concat('%', #{name}, '%')
          AND enabled = 0
        ORDER BY archive_date DESC LIMIT 10
    </select>
    <select id="selectRepeatFileByMd5" resultType="top.shareus.bot.common.domain.ArchivedFile">
        SELECT *
        FROM archived_file
        WHERE md5 = #{md5}
    </select>

</mapper>