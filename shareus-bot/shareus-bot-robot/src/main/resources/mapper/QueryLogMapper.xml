<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.shareus.bot.robot.mapper.QueryLogMapper">
    <resultMap type="top.shareus.bot.common.domain.QueryLog" id="QueryLogResult">
        <result property="id" column="id"/>
        <result property="senderName" column="sender_name"/>
        <result property="senderId" column="sender_id"/>
        <result property="content" column="content"/>
        <result property="extract" column="extract"/>
        <result property="status" column="status"/>
        <result property="answerId" column="answer_id"/>
        <result property="result" column="result"/>
        <result property="sendTime" column="send_time"/>
        <result property="finishTime" column="finish_time"/>
    </resultMap>

    <sql id="BaseField">
        id
        ,
               sender_name,
               sender_id,
               content,
               extract,
               status,
               answer_id,
               result,
               send_time,
               finish_time
    </sql>
    <sql id="selectQueryLogVo">
        select id,
               sender_name,
               sender_id,
               content,
               extract,
               status,
               answer_id,
               result,
               send_time,
               finish_time
        from query_log
    </sql>
    <select id="selectAllUnfinishedQuery" resultType="top.shareus.bot.common.domain.QueryLog">
        SELECT *
        FROM query_log
        WHERE `status` = 1
    </select>
    <select id="queryLogByBookName" resultType="top.shareus.bot.common.domain.QueryLog">
        SELECT *
        FROM query_log
        WHERE `status` = 1
          and #{bookName} LIKE concat('%', `extract`, '%')
    </select>
    <select id="selectUnfinishedQuery" resultType="top.shareus.bot.common.domain.QueryLog">
        SELECT *
        FROM query_log
        WHERE `status` = 1
          and DATEDIFF(NOW(), send_time) = #{day}
    </select>
    <select id="countByYesterday" resultType="java.lang.Integer">
        SELECT count(1)
        FROM query_log
        WHERE DATEDIFF(NOW(), send_time) = 1
    </select>
    <select id="selectUnfinishedQueryBySender" resultType="top.shareus.bot.common.domain.QueryLog">
        SELECT *
        FROM query_log
        where sender_id = #{senderId}
          and send_time = #{date}
          and `status` = 1
    </select>

    <select id="selectOfNDayHotQueryRank" resultType="java.util.HashMap">
        SELECT COUNT(1) as rank,
               id,
               sender_name,
               sender_id,
               content,
               extract,
               status,
               answer_id,
               result,
               send_time,
               finish_time
        from query_log
        WHERE DATEDIFF(NOW(), send_time)  <![CDATA[<=]]> #{day}
        GROUP BY extract
        ORDER BY rank desc limit 10
    </select>
</mapper>